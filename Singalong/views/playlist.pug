- var userId = context && context.userId
- var playlistId = context && context.playlistId
- var albumId = context && context.albumId
div.panel.panel-info.card(id='playlist' data-playlist=playlistId data-user-id=userId data-album-id=albumId)
    div.panel-heading.card-header(role="tab" id="headingFour")
        h3.panel-title
            a.collapsed(id='playlist-title' data-toggle="collapse" href="#collapseFour" aria-expanded="true" aria-controls="collapseFour") Playlist
    div.panel-body.collapse.show.in(id="collapseFour" role="tabpanel" aria-labelledby="headingFour" )
        div.card-body
            div(style="float:right;width:160px")
                - var buttonStyle =  'width:150px;margin-bottom:5px'
                input.form-control(form='playlist-form' id='sleepTimeInput' type='text' name='sleepTime' value='3000' data-toggle="tooltip" title="Sleep time (ms)" style=buttonStyle)
                button.btn.btn-primary.download-button(style=buttonStyle onclick='downloadPlaylist(true)') Download
                form(method='POST' action='songbook' id='playlist-form' target='_blank')
                    input(type='hidden' name='accessToken' value=accessToken)
                    input(type='hidden' name='refreshToken' value=refreshToken)
                    input(type='hidden' name='userId' value=userId)
                    input(type='hidden' name='playlistId' value=playlistId)
                    input(type='hidden' name='albumId' value=albumId)
                    button.btn.btn-primary(type='submit' target='_blank' style=buttonStyle) Create Songbook
                br
                button(src='spotify.png' type='submit' onclick='toggleSpotifyPlayer()' style='width:30px;height:30px;background: url(spotify.png);background-size: 100%;border: none')

            - var items = playlist != null ? playlist.items : []
            each track, index in items
                input(type='hidden' id='userId' name='userId' value=userId)
                input(type='hidden' id='playlistId' name='playlistId' value=playlistId)
                if (track.id)
                    button(src='play.png' onclick='playTrack("' + track.id + '")' style='float:left;width:15px;height:15px;background: url(play.png);background-size: 100%;border: none;margin-right:5px')
                - var style = !searchedDb ? '' : (track.lyrics == null ? 'color:red' : 'color:green');
                a.track(id=index href='#' onclick='getLyrics("' + track.artist + '", "' + track.title + '")' style=style data-artist=track.artist data-title=track.title)= index+1 + '. ' + track
                br

    - var display = showSpotifyPlaylist === 'true' ? 'block' : 'none';
    iframe(id='spotify-player' style="margin-right:25px;margin-bottom:0px;position:fixed;bottom:0;right:0;display:" + display src="https://open.spotify.com/embed?uri=spotify:user:" + userId + ":playlist:" + playlistId width="300" height="380" frameborder="0" allowtransparency="true")
